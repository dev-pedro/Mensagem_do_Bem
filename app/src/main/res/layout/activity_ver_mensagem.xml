<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout_Ver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/dia">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tv_ver_titulo"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:textColor="@color/cor_primaria"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="10dp"
        android:gravity="left|top"
        android:paddingLeft="15dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_ver_titulo"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="120dp"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ver_texto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cor_texto"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </ScrollView>


</RelativeLayout>
